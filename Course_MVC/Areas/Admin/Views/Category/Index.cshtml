@model List<CategoryTableVM>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success text-white btn-sm">Create</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">CreatedDate</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td><img src="~/img/@item.Image" style="width:100px;height:100px;"/></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-primary text-white btn-sm" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-warning text-white btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger text-white btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

