@model CourseEditVM
@{
    ViewData["Title"] = "Edit";
}

<section id="edit-course">
    <div class="container mt-5">
        <div>
            <h2>Course Images</h2>
            <div class="d-flex">
                @foreach (var item in Model.AvailableImages)
                {
                    <div class="photo-ctgr mx-3" data-id="@item.Id">
                        <img src="~/img/@item.Name" style="width:100px;height:100px;" />
                        <div class="picture d-flex flex-column mt-2" style="width:100px;">
                            <button data-id="@item.Id" class="btn btn-danger btn-sm delete" @(item.isMain ? "disabled" : "")>Delete</button>
                            <button data-id="@item.Id" class="btn btn-primary btn-sm make-main" @(item.isMain ? "disabled" : "")>Make Main</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label class="float-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="float-label">Category</label>
                <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <label class="float-label">Images</label>
                <input asp-for="NewImages" accept="image/*" class="form-control">
                <span asp-validation-for="NewImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="float-label">Teacher Name</label>
                <input asp-for="TeacherName" class="form-control">
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="float-label">Price</label>
                <input asp-for="Price" type="number" step="any" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="float-label">Discounted Price</label>
                <input asp-for="DiscountedPrice" type="number" step="any" class="form-control">
                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</section>

@section js {
    <script src="~/Admin/assets/js/edit.js"></script>
}
