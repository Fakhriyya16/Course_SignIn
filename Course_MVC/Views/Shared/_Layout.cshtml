<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educal - Online Learning and Education Angular Template + RTL Preview - ThemeForest</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/assets/css/home.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <img src="./assets/images/logo.png" class="logo" alt="">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-3 category-border">
                        <div class="nav-item d-flex">
                            <div class="dots d-flex">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                                <a class="nav-link category" href="#">Category</a>
                            </div>
                            <ul class="category-dropdown">
                                <li>English Learning</li>
                                <li>Web Development</li>
                                <li>Logo Design</li>
                                <li>Motion Graphics</li>
                                <li>Video Edition</li>
                            </ul>
                        </div>
                        <div class="dropdown-items d-flex">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle home" href="./home.html">
                                Account <i class="fa-solid fa-angle-down"></i>
                            </a>
                            <ul class="list-group open-down">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                    <li class="list-group-item">@User.Identity.Name</li>
                                    <form method="post" asp-controller="Account" asp-action="LogOut">
                                    <li class="list-group-item"><button type="Submit">Log out</button></li></form>
                                    }
                                    else
                                    {
                                    <a asp-controller="Account" asp-action="SignUp">
                                    <li class="list-group-item">Sign Up</li></a>
                                    <a asp-controller="Account" asp-action="SignIn">
                                    <li class="list-group-item">Sign In</li></a>
                                    }
                            </ul>
                        </li>
                        <li class="nav-item dropdown course">
                            <a href="./courses.html" class="nav-link dropdown-toggle">
                                Courses<i class="fa-solid fa-angle-down"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="./blog.html">
                                Blog <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="" role="button"
                               aria-expanded="false">
                                Pages <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </li>
                </div>
                <li class="nav-item contact-li">
                    <a class="nav-link active" aria-current="page" href="./contact.html">Contact</a>
                </li>
                </ul>
                <div class="search-input">
                    <input type="search" placeholder="Search..." aria-label="Search">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <div class="shop-icon">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <span>2</span>
                    </div>
                    <button type="button" class="btn btn-primary">Try for free</button>
                </div>
            </div>
            <i class="fa-solid fa-bars"></i>
            </div>
        </nav>
        <div class="side-bar d-none">
            <button type="button" class="btn-close" aria-label="Close"></button>
            <ul>
                <li><a href="./home.html">Home</a></li>
                <li><a href="./courses.html">Courses</a></li>
                <li><a href="./blog.html">Blog</a></li>
                <li><a href="">Pages</a></li>
                <li><a href="./contact.html">Contact</a></li>
            </ul>
        </div>
    </header>
    @RenderBody()
    </main>
    </div>

    <footer>
        <section id="adv-box">
            <div class="adv-div">
                <div class="adv-right">
                    <h1>You can be your own</h1>
                    <h1>Guilding star with our help</h1>
                </div>
                <div class="adv-left">
                    <img src="~./assets/images/cta-shape.png" alt="">
                    <button type="button" class="btn btn-light">Get Started</button>
                </div>
            </div>
        </section>
        <section id="footer-main">
            <div class="container-custom">
                <div class="row">
                    <div class="col-12 col-lg-3 first-footer">
                        <img src="~./assets/images/logo-2.png" alt="">
                        <p>
                            Great lesson ideas and lesson plans for ESL teachers! Educators can customize lesson plans to
                            best.
                        </p>
                        <div class="icons">
                            <span class="fb"><i class="fa-brands fa-facebook-f"></i></span>
                            <span class="tw"><i class="fa-brands fa-twitter"></i></span>
                            <span class="pnt"><i class="fa-brands fa-pinterest-p"></i></span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 second-footer">
                        <h3>Company</h3>
                        <ul>
                            <li>About</li>
                            <li>Courses</li>
                            <li>Events</li>
                            <li>Instructors</li>
                            <li>Career</li>
                            <li>Become a teacher</li>
                            <li>Contact</li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-2 third-footer">
                        <h3>Platform</h3>
                        <ul>
                            <li>Browse Library</li>
                            <li>Library</li>
                            <li>Partners</li>
                            <li>Mews & Blog</li>
                            <li>FAQs</li>
                            <li>Tutorial</li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-3 last-footer">
                        <h3>Subscribe</h3>
                        <div class="input-group input-group-lg">
                            <input type="email" placeholder="Your email address">
                            <span><i class="fa-solid fa-arrow-right"></i></span>
                        </div>
                        <p>Get the latest news and updates right at your inbox.</p>
                    </div>
                </div>
            </div>
        </section>
        <hr>
        <section id="footer-bottom">
            <p>© 2022 Educal, All Rights Reserved. Design By <a href="">Theme Pure</a></p>
        </section>
    </footer>
    <script src="https://kit.fontawesome.com/f42e4508c2.js" crossorigin="anonymous"></script>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/home.js"></script>
</body>

</html>
